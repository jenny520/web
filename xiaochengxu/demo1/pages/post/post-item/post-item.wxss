.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    padding-bottom: 10px;
}
.post-author-date{
    margin: 10rpx 0 0 10px;
}
.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}
.post-image{
    margin-left: 16px;
    width:100%;
    height:340rpx;
    margin:auto 0;
}
.post-date{
    font-size:26rpx;
    margin-bottom: 10px;
    margin-left: 20px;
    vertical-align: middle;
}
.post-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-left: 10px;
    height: 36px;
    line-height: 36px;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin: 10px 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size:13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}