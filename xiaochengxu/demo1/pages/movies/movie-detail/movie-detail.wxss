@import "../movie-list/stars/stars.wxss";
.container1{
	display:flex;
    flex-direction: column;
}
.head-img{
	width: 100%;
	height: 320rpx;
	-webkit-filter: blur(20px)
}
.head-img-hover{
	width: 100%;
	height: 320rpx;
	position:absolute;
    top:0;
    left:0;
    display:flex;
    flex-direction: column;
}
.main-title{
	font-size:19px;
	font-weight: bold;
	color: #fff;
	margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}
.sub-title{
    font-size: 28rpx;
    color:#fff;
    margin-left: 40rpx;
    margin-top: 40rpx;
}
.like{
	display: flex;
	flex-direction: row;
	margin-top: 60rpx;
    margin-left: 40rpx;
}
.highlight-font{
    color: #f21146;
    font-size:22rpx;
    margin-right: 10rpx;
}
.plain-font{
    color: #fff;
    font-size:22rpx;
    margin-right: 30rpx;
}
.movie-img{
	height:238rpx;
    width: 175rpx;
    position: absolute;
    top:160rpx;
    right: 30rpx;
}
.flex-row{
	display:flex;
    flex-direction: row;
    margin-bottom: 20rpx;
    font-size: 14px;
}
.original-title{
	color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
}
.mark{
    margin-right: 30rpx;
    white-space:nowrap;
    color: #999999;
}
.summary{
    margin-left:40rpx;
    margin-top: 40rpx;
    color: #777777;
}

.hr{
    margin-top:45rpx;
    height:1px;
    width: 750rpx;
    background-color: #d9d9d9;
}

.abstract{
    margin-left:40rpx;
    display:flex;
    flex-direction: column;
    margin-top: 50rpx;
}
.summary-title{
	font-size: 16px;
}
.summary-content{
	font-size: 28rpx;
    margin-top: 20rpx;
    margin-right: 40rpx;
    line-height:40rpx;
    letter-spacing: 1px;
    /*margin-bottom: 50rpx;*/
}

.cast{
    margin-left:40rpx;
    display:flex;
    flex-direction: column;
    margin-top:50rpx;
}

.cast-imgs{
    white-space: nowrap;
}
.cast-container{
    display:inline-flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    margin-right: 40rpx;
    width: 170rpx;
    text-align:center;
    white-space: normal;
}

.cast-img{
    width: 170rpx;
    height: 210rpx;
    
}
.cast-name{
    margin: 10rpx auto 0 auto;
    word-break:break-all;
    font-size:28rpx;
    line-height: 36rpx;
}