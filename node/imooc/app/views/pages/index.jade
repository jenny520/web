extends ../layout.jade

block content
	.container
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h3 
							a(href="/results?cat=#{cat._id}&page=0") #{cat.name}
					.panel-body
						if cat.movies && cat.movies.length > 0
							each item in cat.movies
								.col-md-2
									.thumbnail
										a(href = "/movies/#{item._id}")
											if new RegExp('http'+'.*'+':','g').test(item.poster)
												img(src="#{item.poster}",alt="#{item.title}")
											else
												img(src="/upload/#{item.poster}",alt="#{item.title}")
										.caption
											h3 #{item.title}
											p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片